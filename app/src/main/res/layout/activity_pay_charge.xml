<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title_layout"
        layout="@layout/title_frame" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_layout"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="选择充值金额"
            android:textColor="@color/gray_sub_title"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <CheckedTextView
                android:id="@+id/num1"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/common_bord_bg"
                android:checked="true"
                android:gravity="center"
                android:text="20元"
                android:textColor="@color/gray_sub_title"
                android:textSize="12sp" />

            <CheckedTextView
                android:id="@+id/num2"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/common_bord_bg"
                android:gravity="center"
                android:text="50元"
                android:textColor="@color/gray_sub_title"
                android:textSize="12sp" />

            <CheckedTextView
                android:id="@+id/num3"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/common_bord_bg"
                android:gravity="center"
                android:text="100元"
                android:textColor="@color/gray_sub_title"
                android:textSize="12sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pay_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <CheckedTextView
                android:id="@+id/num4"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/common_bord_bg"
                android:gravity="center"
                android:text="500元"
                android:textColor="@color/gray_sub_title"
                android:textSize="12sp" />

            <CheckedTextView
                android:id="@+id/num5"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/common_bord_bg"
                android:gravity="center"
                android:text="1000元"
                android:textColor="@color/gray_sub_title"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/num6"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/common_bord_bg"
                android:gravity="center"
                android:hint="其他金额"
                android:inputType="number"
                android:maxLength="8"
                android:textColor="@color/gray_sub_title"
                android:textSize="12sp" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="选择支付方式"
            android:textColor="@color/gray_sub_title"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20dp"
            android:background="@color/gray_content" />

        <RelativeLayout
            android:id="@+id/alipay_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:text="支付宝"
                android:textColor="@color/gray_sub_title"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/alipay_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/radio_check"
                android:button="@null"
                android:checked="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_content" />

        <RelativeLayout
            android:id="@+id/wxpay_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:text="微信"
                android:textColor="@color/gray_sub_title"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/wxpay_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/radio_check"
                android:button="@null" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_content" />

        <TextView
            android:id="@+id/add_fee_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="20dp"
            android:background="@drawable/common_round_red_bg"
            android:gravity="center"
            android:text="立即充值"
            android:textColor="@color/white"
            android:textSize="14sp" />


    </LinearLayout>

</RelativeLayout>
