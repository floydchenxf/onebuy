<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/product_item_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_weight="1">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/product_pic_1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/tuqian" />

        <TextView
            android:id="@+id/product_title_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_pic_1"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:singleLine="false"
            android:text="test1"
            android:textColor="#333333"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_title_view_1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/progress_precent_desc_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="夺宝进度"
                    android:textColor="#999999"
                    android:textSize="10sp" />

                <ProgressBar
                    android:id="@+id/progress_present_1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/barcolor"
                    android:layout_width="100dp"
                    android:layout_height="4dp"
                    android:max="100"
                    android:progress="50" />

            </LinearLayout>

            <TextView
                android:id="@+id/add_buy_list_view_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:background="@drawable/common_red_round_bord_bg"
                android:paddingBottom="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="4dp"
                android:text="加入请单"
                android:textColor="#ff4400"
                android:textSize="12sp" />
        </RelativeLayout>


    </RelativeLayout>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#cecece" />

    <RelativeLayout
        android:id="@+id/product_item_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_weight="1">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/product_pic_2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/tuqian" />

        <TextView
            android:id="@+id/product_title_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_pic_2"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:singleLine="false"
            android:text="test2"
            android:textColor="#333333"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_title_view_2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/progress_precent_desc_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="夺宝进度"
                    android:textColor="#999999"
                    android:textSize="10sp" />

                <ProgressBar
                    android:id="@+id/progress_present_2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/barcolor"
                    android:layout_width="100dp"
                    android:layout_height="4dp"
                    android:max="100"
                    android:progress="50" />

            </LinearLayout>

            <TextView
                android:id="@+id/add_buy_list_view_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:background="@drawable/common_red_round_bord_bg"
                android:paddingBottom="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="4dp"
                android:text="加入请单"
                android:textColor="#ff4400"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>