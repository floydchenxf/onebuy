<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/product_type_item_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:layout_weight="1">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/mote_pic_1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:clickable="false"
            android:scaleType="centerCrop"
            android:src="@drawable/tuqian" />

        <CheckBox
            android:id="@+id/likecount1"
            android:layout_width="44dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/count_shape"
            android:button="@null"
            android:drawableLeft="@drawable/heart_selector"
            android:focusable="false"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/bg_recycle_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/duihao_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:background="#55000000"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_1_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="是小差"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/address_1_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/product_type_item_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:layout_weight="1">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/mote_pic_2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:clickable="false"
            android:scaleType="centerCrop"
            android:src="@drawable/tuqian" />

        <CheckBox
            android:id="@+id/likecount2"
            android:layout_width="44dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/count_shape"
            android:button="@null"
            android:drawableLeft="@drawable/heart_selector"
            android:focusable="false"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/bg_recycle_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/duihao_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:background="#55000000"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_2_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="胡巴"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/address_2_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>