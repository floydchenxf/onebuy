<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="#cfcfcf">

        <ImageView
            android:id="@+id/level_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:src="@drawable/icon_commissionlevel_1" />

        <TextView
            android:id="@+id/level_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/level_view"
            android:text="一级佣兵"
            android:textColor="@color/gray_sub_title"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/commission_rate_view"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:gravity="center_vertical"
            android:text="佣金:0.05"
            android:textColor="@color/gray_sub_title"
            android:textSize="16sp" />
    </RelativeLayout>


</RelativeLayout>