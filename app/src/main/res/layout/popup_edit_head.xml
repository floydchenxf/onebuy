<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/edit_head"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/common_white_top_button_bg"
        android:gravity="center"
        android:text="@string/edit_head"
        android:textColor="@color/gray"
        android:textSize="14sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="#e4e4e6"/>

    <TextView
        android:id="@+id/edit_profile"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/common_white_bottom_button_bg"
        android:gravity="center"
        android:text="@string/edit_profile"
        android:textColor="@color/gray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/cancel_button"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/common_white_button_bg"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/gray"
        android:textSize="14sp" />

</LinearLayout>
