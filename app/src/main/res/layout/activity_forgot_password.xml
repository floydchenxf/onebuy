<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title_layout"
        layout="@layout/title_frame" />

    <TextView
        android:id="@+id/forgot_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:text="请输入您的注册手机号码"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/mobile_view"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/forgot_desc"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/common_white_bord"
        android:hint="注册手机号码"
        android:paddingLeft="20dp"
        android:textColor="#afafaf"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/check_code_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobile_view"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp">

        <EditText
            android:id="@+id/check_code"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:background="@drawable/common_white_bord"
            android:gravity="center_vertical"
            android:hint="验证码"
            android:paddingLeft="20dp"
            android:textColor="#afafaf"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/check_code_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/common_round_blue_bg"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/next_step"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/check_code_layout"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/common_round_blue_bg"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>
