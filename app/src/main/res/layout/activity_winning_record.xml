<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title_layout"
        layout="@layout/title_frame" />

    <LinearLayout
        android:id="@+id/status_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/title_layout"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckedTextView
            android:id="@+id/all_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/red_line_button_bg"
            android:gravity="center"
            android:checked="true"
            android:text="全部"
            android:textColor="#666666" />

        <CheckedTextView
            android:id="@+id/doing_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/red_line_button_bg"
            android:gravity="center"
            android:text="进行中"
            android:textColor="#666666" />

        <CheckedTextView
            android:id="@+id/lottest_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/red_line_button_bg"
            android:gravity="center"
            android:text="开奖中"
            android:textColor="#666666" />

        <CheckedTextView
            android:id="@+id/done_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/red_line_button_bg"
            android:gravity="center"
            android:text="已揭晓"
            android:textColor="#666666" />
    </LinearLayout>

    <com.floyd.pullrefresh.widget.PullToRefreshListView
        android:id="@+id/winning_record_list"
        android:layout_width="fill_parent"
        android:background="@color/white"
        android:cacheColorHint="#00000000"
        android:divider="#c0c0c0"
        android:dividerHeight="1px"
        android:fadingEdge="none"
        android:listSelector="#00000000"
        android:layout_height="fill_parent"
        android:layout_below="@+id/status_layout" />

    <LinearLayout
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/status_layout"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="#eeeff3"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:src="@drawable/no_record" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="您还没有数据哦~"
            android:textColor="@color/gray_content"
            android:textSize="12sp" />
    </LinearLayout>

    <include layout="@layout/diamod_data_loading" />

</RelativeLayout>