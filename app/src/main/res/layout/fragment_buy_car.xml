<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title_layout"
        layout="@layout/title_frame" />

    <com.floyd.pullrefresh.widget.PullToRefreshListView
        android:id="@+id/buy_car_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/title_layout"
        android:background="@color/white"
        android:cacheColorHint="#00000000"
        android:divider="#c0c0c0"
        android:dividerHeight="1px"
        android:fadingEdge="none"
        android:listSelector="#00000000" />

    <LinearLayout
        android:id="@+id/empty_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout">

        <TextView
            android:id="@+id/empty_info"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/title_layout"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="暂无数据" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#cecece" />

        <LinearLayout
            android:id="@+id/pay_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total_product_view"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginLeft="14dp"
                android:layout_weight="2"
                android:gravity="center_vertical|left"
                android:text="总共多少"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/pay_view"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:background="#ff1100"
                android:gravity="center"
                android:text="结算"
                android:textColor="@color/white"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/delete_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/delete_desc_view"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginLeft="14dp"
                android:layout_weight="2"
                android:gravity="center_vertical|left"
                android:text="总共多少"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/delete_button_view"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:background="#ff1100"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/white"
                android:textSize="14sp" />


        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/diamod_data_loading" />

</RelativeLayout>