<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/title_layout"
        layout="@layout/title_frame" />


    <LinearLayout
        android:id="@+id/mobile_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:text="帐号"
            android:textColor="#333333"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@null"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:hint="@string/phone_num"
            android:inputType="phone"
            android:paddingLeft="8dp"
            android:textColorHint="#afafaf"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/mobile_layout"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="#d5d5d5" />

    <RelativeLayout
        android:id="@+id/password_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/password_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="密码"
            android:textColor="#333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/password_desc"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/phone_pwd"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:textColorHint="#afafaf"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/forgot_password_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="忘记密码?"
            android:textColor="#ff424c"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/password_layout"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="#d5d5d5" />


    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/password_layout"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/common_round_red_bg"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/regButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/login"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/common_red_round_bord_bg"
        android:gravity="center"
        android:text="@string/register"
        android:textColor="@color/red"
        android:textSize="16sp" />


</RelativeLayout>
