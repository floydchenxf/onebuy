<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentFrameLayout
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="#d4377e">

            <LinearLayout
                android:id="@+id/left"
                android:layout_width="80dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/jiantou_back" />
            </LinearLayout>

            <TextView
                android:id="@+id/center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="筛选模特"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/right"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="right">

                <TextView
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/search" />
            </LinearLayout>

        </com.zhy.android.percent.support.PercentFrameLayout>

        <com.yyg365.pullrefresh.widget.PullToRefreshListView
            android:id="@+id/gridview_filter"
            android:background="#eeeeee"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/title"
            android:cacheColorHint="#00000000"
            android:descendantFocusability="blocksDescendants"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:fadingEdge="none"
            android:listSelector="#00000000" />

        <TextView
            android:id="@+id/empty_info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/status_layout"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="暂无数据"
            android:visibility="gone" />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <include layout="@layout/diamod_data_loading" />
</RelativeLayout>

