<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/navigation_container"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/news_pic_view"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <CheckedTextView
            android:id="@+id/lastest_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/red_line_button_bg"
            android:checked="false"
            android:gravity="center"
            android:text="最新"
            android:textColor="@drawable/word_selector" />

        <CheckedTextView
            android:id="@+id/hottest_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/red_line_button_bg"
            android:gravity="center"
            android:text="最热"
            android:textColor="@drawable/word_selector" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <CheckedTextView
                android:id="@+id/price_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/red_line_button_bg"
                android:gravity="center"
                android:text="价格"
                android:textColor="@drawable/word_selector" />

            <ImageView
                android:id="@+id/price_status_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/price_normal" />
        </RelativeLayout>

        <CheckedTextView
            android:id="@+id/filter_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/red_line_button_bg"
            android:gravity="center"
            android:text="筛选"
            android:textColor="@drawable/word_selector" />

    </LinearLayout>

</LinearLayout>