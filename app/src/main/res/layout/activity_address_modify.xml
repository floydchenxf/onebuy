<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title_layout"
        layout="@layout/title_frame" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:text="收货人"
                android:textColor="#666666"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/linkname_view"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@null"
                android:hint="请输入收货人姓名"
                android:textColor="#666666"
                android:textColorHint="#dddddd"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#cecece" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:text="手机号"
                android:textColor="#666666"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/mobile_view"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@null"
                android:hint="请输入收货人手机"
                android:textColor="#666666"
                android:textColorHint="#dddddd"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#cecece" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:text="省市区"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/province_city_view"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableRight="@drawable/jiantou_next"
                android:gravity="center_vertical"
                android:hint="请选择"
                android:textColor="#666666"
                android:textColorHint="#dddddd" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#cecece" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:text="详细地址"
                android:textColor="#666666"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/address_detail_view"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@null"
                android:hint="请填写实际有效的地址"
                android:textColor="#666666"
                android:textColorHint="#dddddd"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#cecece" />

        <RelativeLayout
            android:id="@+id/default_address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:text="设置默认地址"
                android:textColor="#666666"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/default_address_button"
                android:layout_width="@dimen/radio_width"
                android:layout_height="@dimen/radio_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/radio_check"
                android:button="@null" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd" />

        <TextView
            android:id="@+id/delete_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:gravity="center_vertical"
            android:text="删除该地址"
            android:textColor="@color/red" />

        <View
            android:id="@+id/delete_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd" />


        <TextView
            android:id="@+id/save_addess_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/common_round_red_bg"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="14sp" />


    </LinearLayout>
</RelativeLayout>
