<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/title"
        layout="@layout/title_frame" />


    <LinearLayout
        android:id="@+id/login_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/phone_num_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/user_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:text="手机"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/user_nick"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/user_desc"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:paddingLeft="8dp"
                android:textColorHint="#afafaf"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="4dp"
            android:background="#d5d5d5" />


        <RelativeLayout
            android:id="@+id/password_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/password_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:text="密码"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/password_desc"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="6-16字符"
                android:inputType="textPassword"
                android:paddingLeft="8dp"
                android:textColorHint="#afafaf"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="4dp"
            android:background="#d5d5d5" />


        <RelativeLayout

            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/check_code_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="26dp"
                android:gravity="center"
                android:text="验证码"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/check_code"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/check_code_desc"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="点击右侧获取"
                android:textColorHint="#afafaf"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/check_code_button"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@drawable/common_red_round_bord_bg"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/red"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="4dp"
            android:background="#d5d5d5"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/invite_code_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line4"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/invite_code_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="26dp"
                android:gravity="center"
                android:text="邀请码"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/invite_code_view"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/invite_code_desc"
                android:background="@null"
                android:hint="输入好友邀请码"
                android:textColorHint="#afafaf"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="4dp"
            android:background="#d5d5d5" />

        <TextView
            android:id="@+id/next_step"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/common_round_red_bg"
            android:gravity="center"
            android:text="@string/phone_reg"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/invite_code_show_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="我有邀请码"
            android:textColor="#0077ff"
            android:textSize="13sp" />

    </LinearLayout>

</RelativeLayout>
