<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/product_type_item_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:layout_weight="1">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/product_pic_1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tuqian" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:background="#66000000"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price_1_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:text="商品售价：40"
                android:textSize="9sp"
                android:gravity="center"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/price_1_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:text="酬金：80"
                android:textSize="9sp"
                android:gravity="center"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/finish_status_view1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#66000000"
            android:gravity="center"
            android:textColor="#cecece"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/ding_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ding"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/product_type_item_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:layout_weight="1">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/product_pic_2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tuqian" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:background="#66000000"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price_2_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="4dp"
                android:drawablePadding="4dp"
                android:text="商品售价：40"
                android:textSize="9sp"
                android:gravity="center"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/price_2_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:text="酬金：80"
                android:textSize="9sp"
                android:gravity="center"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/finish_status_view2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#66000000"
            android:gravity="center"
            android:textColor="#cecece"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/ding_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ding"/>

    </RelativeLayout>

</LinearLayout>