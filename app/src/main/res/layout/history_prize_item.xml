<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lssue_code_view"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="2222"
            android:textColor="#999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/prize_time_view"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="2016-04-21 00:00:00"
            android:textColor="#999999"
            android:textSize="12sp" />


    </LinearLayout>

    <view
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#666666" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/head_image_view"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/prizer_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="获奖者"
                android:textColor="#999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ip_address_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="ip地址"
                android:textColor="#999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/good_luck_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="幸运号码"
                android:textColor="#999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/joined_count_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="本次参与"
                android:textColor="#999999"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>