    <!--<item name="android:backgroundDimEnabled">true</item>-->
    <!--//（全透明or半透明）-->
    <!--</style>-->

    <style name="ContentOverlay" parent="@android:style/Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowBackground">@color/bg_gray</item>
        <item name="android:windowAnimationStyle">@style/WXAnimation.Activity</item>
    </style>

    <style name="WXAnimation.Activity" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="aliwx_pull_to_refresh_text_sytle">
        <item name="android:textSize">@dimen/aliwx_font_third_grade</item>
        <item name="android:textColor">@color/aliwx_refresh_head_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#bfffffff</item>
    </style>

    <style name="data_load_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/alpha_black_box</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="aliwx_common_title_text_shadow_white">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:textColor">@color/aliwx_color_white</item>
        <item name="android:textSize">@dimen/aliwx_common_text_size</item>
        <item name="android:paddingLeft">@dimen/aliwx_title_middle_margin</item>
        <item name="android:paddingRight">@dimen/aliwx_title_middle_margin</item>
    </style>

    <style name="aliwx_common_title_text_shadow">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:textColor">@drawable/aliwx_commont_title_btn_text</item>
        <item name="android:textSize">@dimen/aliwx_common_text_size</item>
        <item name="android:paddingLeft">@dimen/aliwx_title_middle_margin</item>
        <item name="android:paddingRight">@dimen/aliwx_title_middle_margin</item>
    </style>

    <style name="aliwx_common_title_left_btn_shadow_white">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@drawable/aliwx_commont_title_btn_text</item>
        <item name="android:textSize">@dimen/aliwx_common_text_size</item>
        <item name="android:drawableLeft">@drawable/aliwx_common_back_btn_bg_white</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@null</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="aliwx_common_title_right_btn_shadow_white">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/aliwx_color_white</item>
        <item name="android:textSize">@dimen/aliwx_common_text_size</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginRight">@dimen/aliwx_column_up_unit_margin</item>
        <item name="android:background">@null</item>
    </style>

    <style name="aliwx_common_title_left_btn_shadow">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@drawable/aliwx_commont_title_btn_text</item>
        <item name="android:textSize">@dimen/aliwx_common_text_size</item>
        <item name="android:drawableLeft">@drawable/aliwx_common_back_btn_bg</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@null</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="aliwx_My_Theme_Dialog_Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowTitleStyle">@style/Aliwx_DialogWindowTitle</item>
    </style>

    <style name="Aliwx_DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DialogWindowTitle</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
